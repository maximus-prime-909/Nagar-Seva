<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg_gradient">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@drawable/gops"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:contentDescription="Uploaded images"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="80dp"
            android:layout_margin="@dimen/narrow_margin"
            tools:text="Address"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_below="@id/image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/pincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/narrow_margin"
            android:layout_marginStart="@dimen/narrow_margin"
            android:layout_marginLeft="@dimen/narrow_margin"
            android:layout_marginTop="@dimen/narrow_margin"
            android:layout_marginEnd="@dimen/narrow_margin"
            android:layout_marginRight="@dimen/narrow_margin"
            android:layout_marginBottom="@dimen/narrow_margin"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="Pincode" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:maxWidth="150dp"
            android:layout_height="wrap_content"
            tools:text="Date"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_margin="@dimen/narrow_margin"
            android:layout_below="@id/address"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:maxWidth="150dp"
            android:layout_height="wrap_content"
            tools:text="Name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_margin="@dimen/narrow_margin"
            android:layout_below="@id/pincode"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Unresolved"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"

            android:layout_margin="@dimen/narrow_margin"
            android:layout_below="@id/pincode"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>